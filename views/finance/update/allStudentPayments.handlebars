<div class="wrapper">
  <!-- Main Header -->
  {{> _financeHeader}}
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    {{> _financeSidebar}}
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        GCR Dashboard
        <small>Control Panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/finance/welcome/{{user.token}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title"><i class="fa fa-money"></i> Update Student Payment</h3>
              {{#if error_msg}}
                <p class="text-danger noMargin">{{error_msg}}</p>
              {{/if}}
              {{#if error_msg_}}
                <p class="text-danger noMargin">{{error_msg_}}</p>
              {{/if}}
              {{#if success_msg_}}
                <p class="text-success noMargin">{{success_msg_}}</p>
              {{/if}}
            </div>
            <!-- /.box-header -->
            <div class="box-body moveUp tableWidth">
              <table id="myTable" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Index Number</th>
                  <th>Level</th>
                  <th>Semester</th>
                  <th>Payment State</th>
                  <th>Update Payment</th>
                </tr>
                </thead>
                <tbody>
                {{#each myPayments}}
                <tr>
                  <td>{{indexNumber}}</td>
                  <td>{{level}}</td>
                  <td>{{semester}}</td>
                  <td>{{paid}}</td>
                  <td>
                    <a href="/finance/update/selected-student/payment/{{_id}}/{{../user.token}}"><strong>Update</strong></a>
                  </td>
                </tr>
                {{/each}}
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      Anything you want
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; {{showYear}} <a href="#">CodeLove, Inc</a>.</strong> All rights reserved.
  </footer>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
  immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>