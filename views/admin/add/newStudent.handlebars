<div class="wrapper">
  <!-- Main Header -->
  {{> _adminHeader}}
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    {{> _adminSidebar}}
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        GCR Dashboard
        <small>Control Panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/welcome/{{user.token}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <!-- Info boxes -->
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><i class="fa fa-user"></i> New Student</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" class="moveUp1" action="/admin/add/student/{{user.token}}" method="post">
              <div class="box-body scroll">
                <div class="form-group has-feedback">
                  {{#if error_msg}}
                    <p class="text-danger noMargin">{{error_msg}}</p>
                  {{/if}}
                  {{#if error_msg_}}
                    <p class="text-danger noMargin">{{error_msg_}}</p>
                  {{/if}}
                  {{#if success_msg}}
                    <p class="text-success noMargin">{{success_msg}}</p>
                  {{/if}}
                  <input type="text" class="form-control" name="firstName" placeholder="Enter First Name" value="{{firstName}}" required>
                  <span class="fa fa-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                  <input type="text" class="form-control" name="lastName" placeholder="Enter Last Name" value="{{lastName}}" required>
                  <span class="fa fa-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                  <input type="text" class="form-control" name="indexNumber" placeholder="Enter Index Number" value="{{indexNumber}}" required>
                  <span class="fa fa-pencil form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                  <input type="email" class="form-control" name="email" placeholder="Enter Email" value="{{email}}" required>
                  <span class="fa fa-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                  <input type="text" class="form-control" name="mobileNumber" placeholder="Enter Mobile Number" value="{{mobileNumber}}" required>
                  <span class="fa fa-phone form-control-feedback"></span>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-primary btn-raised">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -- >
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      Anything you want
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; {{showYear}} <a href="#">CodeLove, Inc</a>.</strong> All rights reserved.
  </footer>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
  immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>