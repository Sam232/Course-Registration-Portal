<div class="wrapper">
  <!-- Main Header -->
  {{> _lecturerHeader}}
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    {{> _lecturerSidebar}}
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        GCR Dashboard
        <small>Control Panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/lecturer/welcome/{{user.token}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title"><i class="fa fa-graduation-cap"></i> Students Grade</h3>
              {{#if error_msg}}
                <p class="text-danger noMargin">{{error_msg}}</p>
              {{/if}}
              {{#if error_msg_}}
                <p class="text-danger noMargin">{{error_msg_}}</p>
              {{/if}}
              {{#if success_msg}}
                <p class="text-success noMargin">{{success_msg}}</p>
              {{/if}}
              {{#if success_msg_}}
                <p class="text-success noMargin">{{success_msg_}}</p>
              {{/if}}
            </div>
            <!-- /.box-header -->
            <div class="box-body moveUp tableWidth">
              <table id="myTable" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Index Number</th>
                  <th>Course Code</th>
                  <th>Course Name</th>
                  <th>Grade</th>
                  <th>Marks</th>
                  <th>Level</th>
                  <th>Semester</th>
                  <th>Confirm Delete</th>
                  <th>Grade Details</th>
                </tr>
                </thead>
                <tbody>
                {{#each grades}}
                <tr>
                  <td>{{indexNumber}}</td>
                  <td>{{courseCode}}</td>
                  <td>{{courseName}}</td>
                  <td>{{grade}}</td>
                  <td>{{marks}}</td>
                  <td>{{level}}</td>
                  <td>{{semester}}</td>
                  <form action="/lecturer/delete/selected-student-grade/{{_id}}/{{../user.token}}/?_method=delete" method="post">
                  <td>
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" required>
                      </label>
                    </div>
                  </td>
                  <td>                   
                    <button type="submit" class="btnStyle"><strong class="text-danger">Delete</strong></button>
                  </td>
                  </form>
                </tr>
                {{/each}}
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      Anything you want
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; {{showYear}} <a href="#">CodeLove, Inc</a>.</strong> All rights reserved.
  </footer>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
  immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>